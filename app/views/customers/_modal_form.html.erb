<%= form_with(model: customer, 
              id: "new_customer_form", 
              class: "space-y-6", 
              data: { 
                controller: "customer-form",
                action: "turbo:submit-end->modal#submitEnd"
              }) do |f| %>
  <% if customer.errors.any? %>
    <div class="rounded-md bg-red-50 p-4 mb-4">
      <div class="flex">
        <div class="ml-3">
          <h3 class="text-sm font-medium text-red-800">
            Se encontraron <%= customer.errors.count %> errores:
          </h3>
          <div class="mt-2 text-sm text-red-700">
            <ul class="list-disc space-y-1 pl-5">
              <% customer.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </div>
  <% end %>

  <div class="grid grid-cols-1 gap-y-6">
    <div class="grid grid-cols-2 gap-x-4">
      <div>
        <%= f.label :first_name, "Nombre", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :first_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm px-3 py-1.5" %>
      </div>
      <div>
        <%= f.label :last_name, "Apellido", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :last_name, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm px-3 py-1.5" %>
      </div>
    </div>

    <div class="grid grid-cols-2 gap-x-4">
      <div>
        <%= f.label :document, "C.I./RUC", class: "block text-sm font-medium text-gray-700" %>
        <%= f.text_field :document, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm px-3 py-1.5" %>
      </div>
      <div>
        <%= f.label :phone, "Teléfono", class: "block text-sm font-medium text-gray-700" %>
        <%= f.telephone_field :phone, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm px-3 py-1.5" %>
      </div>
    </div>

    <div>
      <%= f.label :email, "Email", class: "block text-sm font-medium text-gray-700" %>
      <%= f.email_field :email, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm px-3 py-1.5" %>
    </div>

    <div>
      <%= f.label :address, "Dirección", class: "block text-sm font-medium text-gray-700" %>
      <%= f.text_field :address, class: "mt-1 block w-full rounded-md border-gray-300 shadow-sm focus:border-indigo-500 focus:ring-indigo-500 sm:text-sm px-3 py-1.5" %>
    </div>
  </div>

  <div class="mt-6 flex justify-end space-x-4">
    <button type="button" 
            class="rounded-md bg-white py-2 px-4 text-sm font-medium text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 hover:bg-gray-50"
            data-action="click->modal#close">
      Cancelar
    </button>
    <%= f.submit 'Guardar Cliente', 
          class: "rounded-md bg-indigo-600 py-2 px-4 text-sm font-medium text-white shadow-sm hover:bg-indigo-500 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-indigo-600" %>
  </div>
<% end %>