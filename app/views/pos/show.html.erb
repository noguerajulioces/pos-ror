  <!-- Contenedor Principal -->
  <div class="flex flex-1">
    <!-- Columna Izquierda -->
    <div class="w-2/4 border-r border-gray-300 p-4 flex flex-col justify-between">
      <!-- Sección de productos (tabla) -->
      <div id="cart-items">
        <table class="w-full bg-white rounded-md shadow">
          <thead>
            <tr class="border-b border-gray-200">
              <th class="px-4 py-3 text-left font-medium text-gray-700">Producto</th>
              <th class="px-4 py-3 text-left font-medium text-gray-700">Cantidad</th>
              <th class="px-4 py-3 text-left font-medium text-gray-700">Total</th>
              <th class="px-4 py-3 text-center font-medium text-gray-700">Acciones</th>
            </tr>
          </thead>
          <tbody id="cart-items-body">
            <% if session[:cart].present? %>
              <% session[:cart].each do |item| %>
                <tr>
                  <td class="px-4 py-3"><%= item["name"] %></td>
                  <td class="px-4 py-3"><%= item["quantity"] %></td>
                  <td class="px-4 py-3">GS. <%= number_with_delimiter(item["price"].to_i * item["quantity"], delimiter: '.') %></td>
                  <td class="px-4 py-3 text-center">
                    <button 
                      data-controller="cart-item" 
                      data-action="cart-item#remove" 
                      data-cart-item-product-id-value="<%= item["product_id"] %>"
                      class="text-red-500 hover:text-red-700 focus:outline-none"
                      title="Eliminar"
                    >
                      <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 7l-.867 12.142A2 2 0 0116.138 21H7.862a2 2 0 01-1.995-1.858L5 7m5 4v6m4-6v6m1-10V4a1 1 0 00-1-1h-4a1 1 0 00-1 1v3M4 7h16"></path>
                      </svg>
                    </button>
                  </td>
                </tr>
              <% end %>
            <% else %>
              <tr>
                <td colspan="4" class="px-4 py-6 text-center text-gray-500">
                  No se han añadido productos...
                </td>
              </tr>
            <% end %>
          </tbody>
        </table>
      </div>

      <div>
