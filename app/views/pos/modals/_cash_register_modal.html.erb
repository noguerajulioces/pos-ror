<div class="p-6">
  <h2 class="text-lg font-medium mb-4">Apertura de Caja</h2>
  
  <%= form_with(model: CashRegister.new, url: cash_registers_path, data: { controller: "cash-register", action: "submit->cash-register#open" }) do |form| %>
    <div class="mb-4">
      <label class="block text-gray-700 text-sm font-bold mb-2" for="initial_amount">
        Monto Inicial (â‚²s.)
      </label>
      <%= form.number_field :initial_amount, class: "shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline", required: true, min: 0, step: "1000" %>
    </div>
    
    <div class="flex items-center justify-end">
      <%= form.submit "Abrir Caja", class: "bg-green-500 hover:bg-green-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline" %>
    </div>
  <% end %>
</div>